<%- include("partials/header") %>

    <div class="signup-form">
        <form action="/user/login" method="POST">
            <h2>Sign In to Twitter <i class="fa fa-twitter"></i></h2>
            <p class="hint-text">Sign in with your social media account</p>
            <div class="social-btn text-center">
                <a href="/auth/apple" class="btn btn-outline-dark btn-lg"><i class="fa fa-apple"></i> Apple</a>
                <a href="/auth/google" class="btn btn-danger btn-lg"><i class="fa fa-google"></i> Google</a>
            </div>
            <div class="or-seperator"><b>or</b></div>
            <div class="form-group">
                <input type="text" class="form-control input-lg" name="username" placeholder="Phone, email, or username"
                    required="required">
            </div>
            <div class="form-group">
                <input type="password" class="form-control input-lg" name="password" placeholder="Password"
                    required="required">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg btn-block signup-btn">Sign In</button>
            </div>
        </form>
        <div class="text-center">Don't have an account? <a href="/user/register">Sign up here</a></div>
    </div>

    <%- include("partials/footer") %>